{
  "globals_path": "globals.js",
  "src_folders" : ["tests"],
  "output_folder" : "reports",
  "screenshots" : {
    "enabled" : true,
    "on_failure" : true,
    "on_error" : true,
    "path" : "screenshots"
  },
  "custom_commands_path" : "",
